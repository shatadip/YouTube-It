{
    "manifest_version": 3,
    "name": "Tube It",
    "version": "1.0",
    "description": "Instantly open YouTube with your current search term or tab title. Includes Alt+Y shortcut for speedy access.",
    "permissions": ["activeTab","contextMenus"],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
        "triggerYouTubeIt": {
          "suggested_key": {
            "default": "Alt+Y"
          },
          "description": "Open YouTube with the search term"
        }
      },
    "action": {
      "default_icon": {
        "32": "icons/icon-32.png",
        "48":"icons/icon-48.png",
        "128":"icons/icon-128.png"
    }
  },
  "icons": {
    "32": "icons/icon-32.png",
    "48":"icons/icon-48.png",
    "128":"icons/icon-128.png"
  }
}